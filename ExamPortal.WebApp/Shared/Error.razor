<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Error" Class="mr-3 mb-n1"/>
            @MudDialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.h6"><b>@Subject</b></MudText>
        @foreach (var msg in Messages)
        {
            <MudText>@msg</MudText>    
        }
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@(Close)">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public List<string> Messages { get; set; } = new List<string>();

    [Parameter]
    public string Subject { get; set; } = "";

    void Close()
    {
        MudDialog.Close();
    }

}