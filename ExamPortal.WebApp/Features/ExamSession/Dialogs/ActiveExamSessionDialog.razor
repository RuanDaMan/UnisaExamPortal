@using System.Timers
@using ExamPortal.Application.Shared.Dto
@using ExamPortal.Features.ExamSession.Components

<MudDialog>
    <DialogContent>


        <TimerComponent @ref="Timer"/>

    </DialogContent>
    <DialogActions>
        <MudButton Disabled="Started" OnClick="Cancel">Cancel</MudButton>
        @if (!Started)
        {
            <MudButton Color="Color.Primary" OnClick="StartTimer">Start</MudButton>
        }
        @if (!Started)
        {
            <MudButton Color="Color.Primary" OnClick="StopTimer">Stop</MudButton>
        }

    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public StudentModuleSessionDto Session { get; set; } = new StudentModuleSessionDto();

    private bool Started { get; set; }

    TimerComponent Timer;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    private void StartTimer()
    {
        Timer.StartTimer();
    }

    private void StopTimer()
    {
        Timer.StopTimer();
    }


}