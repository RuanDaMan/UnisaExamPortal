<MudPaper Class="pa-16" Style="margin: auto" Width="80%">
    <MudContainer>


        <MudGrid>
            <MudItem md="6">
                <MudText Typo="Typo.h4">Exam Session - Staff</MudText>
            </MudItem>
            <MudItem md="6">
                <MudText Align="Align.End">
                    <MudButton Variant="Variant.Filled" Color="Color.Success">Create Session</MudButton>
                </MudText>

            </MudItem>
            <MudItem md="6">
                <ModuleSelector @bind-Value="ModuleCode"/>
            </MudItem>
            <MudItem md="6">
                <MudDatePicker Variant="Variant.Outlined" Margin="Margin.Dense" Label="Exam Date" @bind-Date="Day"/>
            </MudItem>
            <MudItem md="6">
                <MudTimePicker Variant="Variant.Outlined" Margin="Margin.Dense" Label="Start Time" @bind-Time="StartTime"/>
            </MudItem>
            <MudItem md="6">
                <MudTimePicker Variant="Variant.Outlined" Margin="Margin.Dense" Label="End Time" @bind-Time="EndTime"/>
            </MudItem>
            <MudItem md="6">
                <MudButton Variant="Variant.Filled" Color="Color.Info">Upload File</MudButton>
            </MudItem>
        </MudGrid>

    </MudContainer>
</MudPaper>

@code
{
    private string ModuleCode { get; set; } = string.Empty;
    private DateTime? Day { get; set; }
    private TimeSpan? StartTime { get; set; }
    private TimeSpan? EndTime { get; set; }
}